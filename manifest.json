{
  "name": "Pop-Tabs Blocker",
  "version": "0.0.1",
  "description": "Block any pop-tabs from popping",
  "manifest_version": 2,
  "permissions": ["activeTab", "tabs", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "18": "images/icon18.png",
      "36": "images/icon36.png",
      "48": "images/icon48.png"
    }
  }
}
