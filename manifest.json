  {
    "name": "Pop-Tabs Blocker",
    "version": "0.0.1",
    "description": "Block any pop-tabs from popping",
    "manifest_version": 2,
    "permissions": ["activeTab", "tabs", "declarativeContent", "storage"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [{
        "matches": [
            "http://*/*",
            "https://*/*",
            "*://*/*"
        ],
      "run_at": "document_start",
      "all_frames": true,
        "js": ["content_script.js"]
    }],
    "browser_action": {
      "default_popup": "popup.html"

    }
  }
